@model IEnumerable<ApplicationRole>
@{
    ViewData["Title"] = "All Roles";
}

@* <style>
    .searchClass{
        display:flex;
        justify-content:center;
    }
</style> *@
<h1>All Roles</h1>
<br />
<a asp-action="create" class="btn btn-primary">Create New Role</a>
<br />
<br />

@if (TempData["MessageTemp"] != null)
{
    <div class="alert alert-success">
        <h3>@TempData["MessageTemp"]</h3>
    </div>
}
@if (TempData["MessageTempUpdated"] != null)
{
    <div class="alert alert-success">
        <h3>@TempData["MessageTempupdated"]</h3>
    </div>
}
@if (TempData["MessageTempDeleted"] != null)
{
    <div class="alert alert-dark">
        <h3>@TempData["MessageTempDeleted"]</h3>
    </div>
}
@if (Model?.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(x=> x.Id)</th>
                <th>@Html.DisplayNameFor(x=> x.Name)</th>
                <th>@Html.DisplayNameFor(x=> x.CreateAt)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.CreateAt.Day-@item.CreateAt.Month-@item.CreateAt.Year</td>
                    <partial name="_ButtonsPartialView" model="item.Id" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        <h3>Roles Not Found!</h3>
    </div>
}

